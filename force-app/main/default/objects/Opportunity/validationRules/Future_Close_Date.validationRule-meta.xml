<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Future_Close_Date</fullName>
    <active>false</active>
    <description>Close date must be in future</description>
    <errorConditionFormula>AND( ISNEW(), CloseDate &lt; TODAY())</errorConditionFormula>
    <errorDisplayField>CloseDate</errorDisplayField>
    <errorMessage>Close date cannot be in the past</errorMessage>
</ValidationRule>

            <operation>equals</operation>
            <value>Request Approved - Waiting For Expense Report</value>
        </criteriaItems>
        <criteriaItems>
            <field>Travel_Fund_Request__c.Donot_send_Approval_Email__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Travel_Fund_Request__c.Event_Start_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Travel_Fund_Request__c.NonLF_Event__c</field>

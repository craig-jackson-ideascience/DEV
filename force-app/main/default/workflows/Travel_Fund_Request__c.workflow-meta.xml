    <rules>
        <fullName>Ext - TravelFund Denied</fullName>
        <actions>
            <name>EXT_Travel_Fund_Denied</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Travel_Fund_Request__c.Status__c</field>
            <operation>equals</operation>
            <value>Denied</value>
        </criteriaItems>
        <criteriaItems>
            <field>Travel_Fund_Request__c.Donot_send_Approval_Email__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
